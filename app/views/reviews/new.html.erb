<div class="container">
  <div class="review-title">
    <h1>How was it?</h1>
  </div>
  <div id="review_form">
  <%= simple_form_for [@review] do |f| %>

    <h2><%= f.input :restaurant_id, input_html: {class: "review-input-box review-drop-down" }, label: "Where", collection: @restaurants %></h2>
    <h2><%= f.input :title, input_html: {class: "review-input-box"}, label: "The topline" %></h2>
    <h2><%= f.input :content, input_html: {class: "review-input-box"}, label: "Give it to us..." %></h2>
    <h2><%= f.input :emoji, input_html: {class: "review-input-box"}, label: "Pick an emoji", collection: @emojis %></h2>
    <h2><%= f.input :perfect_for, input_html: {class: "review-input-box"}, label: "Perfect for...", collection: @perfect_for %></h2>

    <div class="submit-review">  <%= f.button :submit, class: 'btn submit-review-btn', value: "Add review" %> </div>
    </div>
  <% end %>
  </div>


</div>
