<div class="container footer-padding pb-5">
  <h1 id="login-title">Log in</h1>
  <div class="login-contain">


    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <h3><%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "review-input-box" } %></h3>
        <h3><%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "review-input-box" } %></h3>
        <p><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></p>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'btn submit-review-btn' %>
      </div>
    <% end %>

    <div class="shared-links"><%= render "devise/shared/links" %></div>
  </div>
</div>
