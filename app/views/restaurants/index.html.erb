<%= form_tag restaurants_path, method: :get, class:
          "d-flex" do%>
          <%= text_field_tag :query,
          params[:query],
          class: "form-control ", placeholder: "Find a restaurant" %>
          <%= submit_tag "Search", class:"btn" %>
          <% end %>

<div class="map-restaurant-index">
  <div style="width: 100%; height: 350px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>



<% @restaurants.each do |restaurant| %>
      <%= render "shared/restaurant_main_card", restaurant: restaurant %>
<% end %>
