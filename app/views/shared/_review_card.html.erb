<div class="review-card" data-toggle="modal" data-target="#review-modal<%= review.id %>">
  <div class="review-top-row">
    <div class="avatar-title">
        <i class="fa-regular fa-face-smile me-3 "></i>
        <h2><%= review.title %></h2>
    </div>
   <div class="review-emoji">
      <p><%= Review::EMOJIS.key(review.emoji) %></p>
    </div>
  </div>
    <div class="review-content">
      <% if review.content.length < 120 %>
        <%= review.content %>
      <% else %>
        <p><%= review.content[0, 120]%>...</p>
      <% end %>
    </div>
    <%= render "shared/review_modal", review: review %>
</div>
