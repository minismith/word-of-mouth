<div class="restaurant-main-card">
    <% @bookmarks.each do |bookmark|%>
    <% restaurant = Restaurant.find(bookmark.restaurant_id) %>
      <%= link_to restaurant_path(restaurant) do %>
      <div class="restaurant-card my-0">
        <div class="restaurant-card-image">
        <!-- Add cloudinary image here -->

          <%= image_tag(restaurant.photo, width: 400, height: 210, crop: :fill) %>

        </div>
        <div class="restaurant-card-info">
          <div>
            <h2><%= restaurant.name %></h2>
            <h3><%= restaurant.cuisine %></h3>
          </div>
          <div>
            <h2 class="restaurant-card-pricing"><%= restaurant.price %></h2>
          </div>
        </div>
      </div>
      <% end %>
      <div id="wishlist-remove" class="mb-2"><p><%= link_to "Remove", bookmark_path(bookmark),
              data: {turbo_method: :Delete} %></p></div>
    <% end %>

</div>
