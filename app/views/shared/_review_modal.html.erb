<div class="modal" id="review-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= review.user.first_name.capitalize %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h3><%= review.title%></h3>
        <p><strong>Restaurant:</strong><% review.restaurant.name %></p>
        <p><%= review.content%></p>
        <p><strong>Rating:  </strong><%= Review::EMOJIS.key(review.emoji) %></p>
        <p><strong>Perfect for:</strong></p>
        <% review.perfect_for.each do |category| %>
          <li><%= category %></li>
        <% end %>
      </div>
      <div class="modal-footer">
        <%# <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> %>
      </div>
    </div>
  </div>
</div>
